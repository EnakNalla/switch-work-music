{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "../../dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "typeRoots": ["../@types"]
  },
  "include": ["./", "../@types"]
}
